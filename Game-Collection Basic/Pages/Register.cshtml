@page
@model TestProjekt.Pages.Register
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<h4>
    Join us by filling you info in
</h4>
<p>
    <a asp-page="Signin">Already a member ? Sign In</a>
</p>
<hr />

<img style="float: right; margin:-60px 80px 50px 0px;" src="~/images/img.png" width="550" height="550">

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Users.USR_UserName" class="control-label">User Name</label>
                <input asp-for="Users.USR_UserName" class="form-control" placeholder="UserName" />
                <span asp-validation-for="Users.USR_UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.USR_Password" class="control-label">Password</label>
                <input asp-for="Users.USR_Password" type="password" class="form-control" id="Password" placeholder="Password" />
                <span asp-validation-for="Users.USR_Password" class="text-danger"></span>
                <input type="checkbox" onclick="password()">Show Password

            </div>
            <div class="form-group">
                <label asp-for="Users.USR_FirstName" class="control-label">First Name</label>
                <input asp-for="Users.USR_FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="Users.USR_FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.USR_LastName" class="control-label">Last Name</label>
                <input asp-for="Users.USR_LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="Users.USR_LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>

        </form>

    </div>

</div>


