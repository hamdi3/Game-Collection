@page
@model TestProjekt.Pages.Signin
@{
    ViewData["Title"] = "Signin";
}

<h2>Login</h2>

<h4>Already a member ? then Sing in !</h4>
<hr />
<img style="float: right; margin:-60px 80px 50px 0px;" src="~/images/img.png" width="550" height="550">
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Users.USR_UserName" class="control-label">User Name</label>
                <input asp-for="Users.USR_UserName" runat="server" class="form-control" id="Username" placeholder="UserName" />
                <span asp-validation-for="Users.USR_UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.USR_Password" class="control-label">Password</label>
                <input asp-for="Users.USR_Password" runat="server" type="password" class="form-control" id="Password" placeholder="Password" />
                <span asp-validation-for="Users.USR_Password" class="text-danger"></span>
                <input type="checkbox" onclick="password()">Show Password
            </div>

            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
